@model LoginViewModel

<table>
    <tr>
        <td><img src="~/images/users.png" alt="Registro" class="center-block" /></td>
        <td>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <h4>Registrar usuário</h4>

                    <form asp-controller="Account" asp-action="Register" method="post" role="form">
                        <hr />

                        <!-- TagHelper para validação "asp-validation-summary" e "asp-validation-for" -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="UserName" class="col-md-2 control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <br />

                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Registrar" />
                        </div>

                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>